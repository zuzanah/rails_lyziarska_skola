<h1>Registrácia</h1>
<p>Pokiaľ chcete pridávať hodnotenia, komentáre a rezervovať lekcie, musíte sa zaregistrovať.</p>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nickname, "Užívateľské meno" %><br />
    <%= f.text_field :nickname %>
  </div>
  <div class="field">
    <%= f.label :email, "e-mail" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password, "Heslo" %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Potvrdenie hesla" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions"><%= f.submit "Zaregistrovať sa" %></div>
<% end %>

<%= button_to "Dozadu", users_path, :method => "get" %> <br>
