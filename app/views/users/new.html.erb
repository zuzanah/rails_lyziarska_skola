<h1>Registrácia</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nickname, "užívateľské meno" %><br />
    <%= f.text_field :nickname %>
  </div>
  <div class="field">
    <%= f.label :email, "e-mail" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password, "heslo" %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "potvrdenie hesla" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions"><%= f.submit "Zaregistrovať sa" %></div>
<% end %>

<%= link_to 'Dozadu', ratings_path %>
