<p id="notice"><%= notice %></p>

<p>
  <strong>Hodnotenie:</strong>
  <%= @rating.body %>
</p>

<p>
  <strong>Užívateľ:</strong>
  <%= @rating.user.nickname %>
</p>

<table>
  <thead>
    <tr>
      <th>Komentár</th>
      <th>Užívateľ</th>
      <th>Vložené</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% (@rating.rcomments).each do |com|  %>
      <tr>
        <td><%= com.body %></td>
        <td><%= com.user.nickname %></td>
        <td><%= com.created_at.strftime("%b %d, %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= button_to "Pridať komentár", new_rating_rcomment_path(@rating), :method => "get" %> <br>
<%= button_to "Dozadu", ratings_path, :method => "get" %> <br>


