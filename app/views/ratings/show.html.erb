<p id="notice"><%= notice %></p>

<p>
  <strong>Hodnotenie:</strong>
  <%= @rating.body %>
</p>

<p>
  <strong>Uzivatel:</strong>
  <%= @rating.user.nickname %>
</p>

<table>
  <thead>
    <tr>
      <th>Komentar</th>
      <th>Uzivatel</th>
      <th>Vlozene</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% (@rating.comments).each do |com|  %>
      <tr>
        <td><%= com.body %></td>
        <td><%= com.user.nickname %></td>
        <td><%= com.created_at.strftime("%b %d, %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Comment', new_rating_comment_path(@rating) %><br>
<%= link_to 'Back', ratings_path %>
