  </head>

  <body>
    <header class="navbar  navbar-inverse">
      <div class="navbar-class">
        <div class="container">
          <ul class="nav navbar-nav">
             <h6>
               <%= link_to "Domov", users_path, class: 'btn btn-info' %> &nbsp
               <%= link_to "Hodnotenie", ratings_path, class: 'btn btn-info' %> &nbsp
               <%= link_to "Aktuality", skinews_index_path, class: 'btn btn-info' %> &nbsp
               <%= link_to "Inštruktori", instructors_path, class: 'btn btn-info' %> &nbsp              
               <%= link_to "Rezervovať lekciu", (current_user ? type_path : signup_path), class: 'btn btn-info' %>
               <div id="container">
                 <div id="user_header">
                   <% if current_user %>
                     <div align="right">Prihlásený ako <%= current_user.nickname %>. <%= link_to "Odhlásiť", logout_path %></div>
                   <% else %>
                     <div align="right"><%= link_to "Registrácia", signup_path %> / <%= link_to "Prihlásiť", login_path %></div>
                   <% end %>
                 </div>
                 <% flash.each do |name, msg| %>
                   <%= content_tag :div, msg, id: "flash_#{name}" %>
                 <% end %>
                 <%= yield %>
               </div>
             </h6>
          </ul>
        </div>
      </div>
    </header>    
  </body>
</html>

